[Definition]

# Option: loglevel. Default is ERROR
# Available options: CRITICAL, ERROR, WARNING, NOTICE, INFO, DEBUG
loglevel = INFO

# Set the log target
logtarget = SYSLOG


# File for the fail2ban persistent data to be stored: ":memory:", "None".
dbfile = :memory:

# Sets the max age in <SECONDS> that history of bans will be kept
dbpurgeage = 21600
